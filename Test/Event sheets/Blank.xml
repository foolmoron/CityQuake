<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Blank</name>
    <events>
        <variable constant="0" name="MAX_SCALE" static="0" type="number">5</variable>
        <variable constant="0" name="RADIUS_PER_SECOND" static="0" type="number">400</variable>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action id="1" name="Load randomized level" type="CityQuakeLevels" />
                <action disabled="1" id="-33" name="Set layer parallax" type="System">
                    <param id="0" name="Layer">2</param>
                    <param id="1" name="Parallax X">0</param>
                    <param id="2" name="Parallax Y">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On any touch start" type="Touch" />
            </conditions>
            <actions>
                <action id="-3" name="Create object" type="System">
                    <param id="0" name="Object to create">Earthquake</param>
                    <param id="1" name="Layer">&quot;Middle&quot;</param>
                    <param id="2" name="X">Touch.X</param>
                    <param id="3" name="Y">Touch.Y</param>
                </action>
                <action behavior="ScrollTo" id="0" name="Shake" type="BG">
                    <param id="0" name="Magnitude">50</param>
                    <param id="1" name="Duration">1</param>
                    <param id="2" name="Mode">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions>
                <action id="0" name="Set text" type="Debug">
                    <param id="0" name="Text">&quot;DEBUG TEXT: &quot; &amp; newline &amp; &quot;FPS: &quot; &amp; fps</param>
                </action>
                <action id="9" name="Set scale" type="Earthquake">
                    <param id="0" name="Scale">(((100 - Earthquake.Opacity)/100) * (MAX_SCALE - 1)) + 1</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
